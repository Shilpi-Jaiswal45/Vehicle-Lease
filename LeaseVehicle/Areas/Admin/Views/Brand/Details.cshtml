@model LeaseVehicle.Models.Brand

@{
    ViewBag.Title = "Details";
}

<h2> Brand Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Category Name :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt>
            @Html.DisplayName("Brand Name :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BrandName)
        </dd>

        <dt>
            @Html.DisplayName("Status :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>




    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BrandId }) |
    @Html.ActionLink("View Brands List", "ViewBrand")
</p>
